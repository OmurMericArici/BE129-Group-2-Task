@{
    ViewData["Title"] = "Delete Product";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <a href="/Product/Edit">Products</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Delete Product</strong>
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Delete Product</h2>
                <p class="text-danger">Are you sure you want to delete this product?</p>
            </div>
        </div>

        <div class="row">

            <!-- ÜRÜN ÖNİZLEME -->
            <div class="col-md-6">

                <div class="p-4 border rounded">
                    <img src="~/images/cloth_1.jpg" alt="Product Image" class="img-fluid mb-4 rounded">

                    <h3 class="text-black">Product Name</h3>
                    <p class="mb-2">Short product description…</p>

                    <p class="text-primary h5">$49.00</p>
                </div>

            </div>

            <!-- SİLME İŞLEMİ -->
            <div class="col-md-6">

                <div class="p-4 border rounded">

                    <h4 class="text-black">Confirm Delete</h4>
                    <p>Once deleted, this product cannot be recovered.</p>

                    <div class="form-group row mt-4">

                        <div class="col-md-6 mb-3">
                            <a class="btn btn-danger btn-lg btn-block" href="#">
                                Delete Product
                            </a>
                        </div>

                        <div class="col-md-6">
                            <a class="btn btn-secondary btn-lg btn-block" href="/Product/Edit">
                                Cancel
                            </a>
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>
</div>
