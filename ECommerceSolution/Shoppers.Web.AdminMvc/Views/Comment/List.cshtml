@{
    ViewData["Title"] = "Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Comments</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Comment List</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Comment</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th style="width:130px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <!-- Fake data - Model bağlı olmadığı için statik örnek -->
                    <tr>
                        <td>1</td>
                        <td>John Doe</td>
                        <td>Great product, fast delivery!</td>
                        <td>2025-11-21</td>
                        <td><span class="badge badge-success">Approved</span></td>
                        <td>
                            <a href="/Comment/Approve" class="btn btn-success btn-sm">
                                <i class="fas fa-check"></i>
                            </a>
                            <a href="#" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>

                    <tr>
                        <td>2</td>
                        <td>Jane Smith</td>
                        <td>Product arrived damaged...</td>
                        <td>2025-11-21</td>
                        <td><span class="badge badge-warning">Pending</span></td>
                        <td>
                            <a href="/Comment/Approve" class="btn btn-success btn-sm">
                                <i class="fas fa-check"></i>
                            </a>
                            <a href="#" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
