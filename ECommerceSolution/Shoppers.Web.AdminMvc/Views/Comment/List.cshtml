@model List<App.Models.DTO.CommentDto>

@{
    ViewData["Title"] = "Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Comments</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Comments</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Product</th>
                        <th>User</th>
                        <th>Comment</th>
                        <th>Stars</th>
                        <th>Status</th>
                        <th style="width:130px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UserName</td>
                                <td>
                                    <div style="max-height: 60px; overflow:hidden; text-overflow:ellipsis;">
                                        @item.Text
                                    </div>
                                </td>
                                <td>@item.StarCount / 5</td>
                                <td>
                                    @if (item.IsConfirmed)
                                    {
                                        <span class="badge badge-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (!item.IsConfirmed)
                                    {
                                        <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i> Approve
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center">No comments found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>