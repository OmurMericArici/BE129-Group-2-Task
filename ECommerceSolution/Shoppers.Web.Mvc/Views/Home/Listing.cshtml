@model List<App.Models.DTO.ProductDto>

@{
    ViewData["Title"] = "Shop";
    var categories = ViewBag.Categories as List<App.Models.DTO.CategoryDto>;
    var currentCategory = ViewBag.CurrentCategory as string;
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Shop</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-9 order-2">
                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4">
                            <h2 class="text-black h5">Shop All</h2>
                        </div>
                        <div class="d-flex">
                            <div class="dropdown mr-1 ml-md-auto">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuReference" data-toggle="dropdown">
                                    Sort By
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                                    <a class="dropdown-item" asp-route-category="@currentCategory" asp-route-sort="newest">New Arrivals</a>
                                    <a class="dropdown-item" asp-route-category="@currentCategory" asp-route-sort="price_asc">Price, low to high</a>
                                    <a class="dropdown-item" asp-route-category="@currentCategory" asp-route-sort="price_desc">Price, high to low</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-5">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                                <div class="block-4 text-center border">
                                    <figure class="block-4-image">
                                        <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@item.Id">
                                            @if (item.ImageUrls != null && item.ImageUrls.Any())
                                            {
                                                <img src="@item.ImageUrls.First()" alt="@item.Name" class="img-fluid" style="height:250px; object-fit:cover;">
                                            }
                                            else
                                            {
                                                <img src="~/images/cloth_1.jpg" alt="No Image" class="img-fluid">
                                            }
                                        </a>
                                    </figure>
                                    <div class="block-4-text p-4">
                                        <h3><a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@item.Id">@item.Name</a></h3>
                                        <p class="mb-0">@item.CategoryName</p>
                                        <p class="text-primary font-weight-bold">@item.Price.ToString("C")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <p>No products found in this category.</p>
                            <a asp-action="Listing" asp-route-category="all" class="btn btn-primary btn-sm">View All Products</a>
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <a asp-action="Listing" asp-route-category="all" class="d-flex">
                                <span>All Products</span>
                            </a>
                        </li>
                        @if (categories != null)
                        {
                            @foreach (var cat in categories)
                            {
                                <li class="mb-1">
                                    <a asp-action="Listing" asp-route-category="@cat.Name" class="d-flex">
                                        <span>@cat.Name</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>