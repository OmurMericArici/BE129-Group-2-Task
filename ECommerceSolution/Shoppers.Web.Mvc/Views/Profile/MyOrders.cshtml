@model List<Shoppers.Data.Entities.OrderEntity>
@{
    ViewData["Title"] = "My Orders";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">My Orders</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <h2 class="h3 mb-3 text-black">Your Orders</h2>

                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        var total = order.OrderItems.Sum(x => x.Quantity * x.UnitPrice);

                        <div class="p-4 border rounded mb-4">
                            <h5 class="text-primary">Order #@order.OrderCode</h5>
                            <p class="mb-1"><strong>Date:</strong> @order.CreatedAt.ToShortDateString()</p>
                            <p class="mb-3"><strong>Total:</strong> @total.ToString("C")</p>

                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">You have no orders yet.</div>
                }

            </div>

            <div class="col-md-4">
                <div class="border p-4 rounded shadow-sm">
                    <h3 class="h5 text-black mb-4">Account Menu</h3>
                    <ul class="list-unstyled">
                        <li class="mb-3"><a asp-action="Details" class="text-black">Profile Details</a></li>
                        <li class="mb-3"><a asp-action="Edit" class="text-black">Edit Profile</a></li>
                        <li class="mb-3"><a asp-action="MyOrders" class="text-black">My Orders</a></li>
                        <li class="mb-3"><a asp-action="MyProducts" class="text-black">My Products</a></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>