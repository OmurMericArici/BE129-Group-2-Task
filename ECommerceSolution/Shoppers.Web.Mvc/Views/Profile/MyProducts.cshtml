@{
    ViewData["Title"] = "My Products";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">My Products</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Products You Added</h2>
            </div>
        </div>

        <div class="row">

            <!-- PRODUCT CARD 1 -->
            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                <div class="block-4 text-center border">
                    <figure class="block-4-image">
                        <a href="/Product/Edit">
                            <img src="~/images/cloth_1.jpg" alt="Product" class="img-fluid">
                        </a>
                    </figure>
                    <div class="block-4-text p-4">
                        <h3 class="text-primary">Tank Top</h3>
                        <p class="mb-1">Stock: 12</p>
                        <p class="text-primary font-weight-bold">$49.00</p>

                        <a href="/Product/Edit" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a href="/Product/Delete" class="btn btn-sm btn-outline-danger">Delete</a>
                        <a href="/Product/Comment" class="btn btn-sm btn-outline-dark">Comments</a>
                    </div>
                </div>
            </div>

            <!-- PRODUCT CARD 2 -->
            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                <div class="block-4 text-center border">
                    <figure class="block-4-image">
                        <a href="/Product/Edit">
                            <img src="~/images/shoe_1.jpg" alt="Product" class="img-fluid">
                        </a>
                    </figure>
                    <div class="block-4-text p-4">
                        <h3 class="text-primary">Blue Sneakers</h3>
                        <p class="mb-1">Stock: 5</p>
                        <p class="text-primary font-weight-bold">$59.00</p>

                        <a href="/Product/Edit" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a href="/Product/Delete" class="btn btn-sm btn-outline-danger">Delete</a>
                        <a href="/Product/Comment" class="btn btn-sm btn-outline-dark">Comments</a>
                    </div>
                </div>
            </div>

            <!-- PRODUCT CARD 3 -->
            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                <div class="block-4 text-center border">
                    <figure class="block-4-image">
                        <a href="/Product/Edit">
                            <img src="~/images/cloth_3.jpg" alt="Product" class="img-fluid">
                        </a>
                    </figure>
                    <div class="block-4-text p-4">
                        <h3 class="text-primary">T-Shirt Mockup</h3>
                        <p class="mb-1">Stock: 20</p>
                        <p class="text-primary font-weight-bold">$39.00</p>

                        <a href="/Product/Edit" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a href="/Product/Delete" class="btn btn-sm btn-outline-danger">Delete</a>
                        <a href="/Product/Comment" class="btn btn-sm btn-outline-dark">Comments</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
