@model Shoppers.Web.Mvc.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Login</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5 mb-md-0">
                <h2 class="h3 mb-3 text-black">Login</h2>

                <form asp-action="Login" method="post">
                    <div class="p-3 p-lg-5 border">

                        <!-- Başarılı kayıt mesajı gelirse göster -->
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Email" class="text-black">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" placeholder="you@example.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Password" class="text-black">Password <span class="text-danger">*</span></label>
                                <input asp-for="Password" class="form-control" placeholder="********">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                            </div>
                        </div>

                        <p class="mt-3 mb-1">
                            <a asp-action="ForgotPassword" class="text-primary">Forgot your password?</a>
                        </p>

                        <p class="mt-2">
                            Don't have an account?
                            <a asp-action="Register" class="text-primary">Register Here</a>
                        </p>

                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <img src="~/images/cloth_2.jpg" alt="Image" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}