@{
    ViewData["Title"] = "Login";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Login</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row">
            <div class="col-md-6 mb-5 mb-md-0">

                <h2 class="h3 mb-3 text-black">Login</h2>

                <div class="p-3 p-lg-5 border">

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label class="text-black" for="Email">Email</label>
                            <input type="email" class="form-control" id="Email" placeholder="you@example.com">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label class="text-black" for="Password">Password</label>
                            <input type="password" class="form-control" id="Password" placeholder="********">
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <div class="col-md-12">
                            <label class="d-flex align-items-center">
                                <input type="checkbox" class="mr-2"> Remember Me
                            </label>
                        </div>
                    </div>

                    <div class="form-group row mt-4">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Login">
                        </div>
                    </div>

                    <p class="mt-3 mb-1">
                        <a href="/Auth/ForgotPassword" class="text-primary">Forgot your password?</a>
                    </p>

                    <p class="mt-2">
                        Don't have an account?
                        <a href="/Auth/Register" class="text-primary">Register Here</a>
                    </p>

                </div>
            </div>

            <div class="col-md-6">
                <img src="~/images/cloth_2.jpg" alt="Image" class="img-fluid rounded">
            </div>

        </div>

    </div>
</div>
