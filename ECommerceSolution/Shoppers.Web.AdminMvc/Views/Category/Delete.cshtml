@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Delete Category</h1>

<div class="row">
    <div class="col-lg-6">

        <!-- DELETE WARNING CARD -->
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger">
                <h6 class="m-0 font-weight-bold text-white">
                    ⚠️ Are you sure you want to delete this category?
                </h6>
            </div>

            <div class="card-body">

                <!-- Summary Info -->
                <p class="mb-4">
                    This action <strong>cannot be undone</strong>.
                    Please confirm that you want to permanently delete the following category:
                </p>

                <ul class="list-group mb-4">
                    <li class="list-group-item">
                        <strong>Name:</strong> Casual Wear
                    </li>
                    <li class="list-group-item">
                        <strong>Description:</strong> Daily clothing products
                    </li>
                </ul>

                <!-- Delete Form -->
                <form method="post">
                    <button type="submit" class="btn btn-danger btn-block mb-2">
                        <i class="fas fa-trash-alt mr-1"></i>
                        Delete Category
                    </button>

                    <a href="/Category/List" class="btn btn-secondary btn-block">
                        <i class="fas fa-arrow-left mr-1"></i>
                        Cancel / Back to List
                    </a>
                </form>

            </div>
        </div>

    </div>
</div>
