@model List<Shoppers.Data.Entities.UserEntity>

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Users</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Registered Users</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 50px;">#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Registered Date</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>
                                    @if(user.RoleId == 3) { <span class="badge badge-danger">Admin</span> }
                                    else if(user.RoleId == 2) { <span class="badge badge-primary">Seller</span> }
                                    else { <span class="badge badge-secondary">Buyer</span> }
                                </td>
                                <td>@user.CreatedAt.ToShortDateString()</td>
                                <td>
                                    <!-- Sadece Buyer ise Satıcı yapma butonu çıksın -->
                                    @if (user.RoleId == 1)
                                    {
                                        <a asp-action="Approve" asp-route-id="@user.Id" class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i> Make Seller
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>