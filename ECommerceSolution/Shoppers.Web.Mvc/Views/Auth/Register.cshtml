@model Shoppers.Web.Mvc.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Register</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5 mb-md-0">
                <h2 class="h3 mb-3 text-black">Create an Account</h2>

                <form asp-action="Register" method="post">
                    <div class="p-3 p-lg-5 border">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="text-black">First Name <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="text-black">Last Name <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Email" class="text-black">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" placeholder="you@example.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Password" class="text-black">Password <span class="text-danger">*</span></label>
                                <input asp-for="Password" class="form-control" placeholder="********">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="ConfirmPassword" class="text-black">Confirm Password <span class="text-danger">*</span></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="********">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                            </div>
                        </div>

                        <p class="mt-3">
                            Already have an account?
                            <a asp-action="Login" class="text-primary">Login Here</a>
                        </p>
                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <img src="~/images/cloth_3.jpg" alt="Image" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}