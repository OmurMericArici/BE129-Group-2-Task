@{
    ViewData["Title"] = "Edit Product";
    var categories = new List<string> { "Men", "Women", "Children", "Shoes", "Accessories" };
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Edit Product</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Edit Product</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-7">

                <form method="post" enctype="multipart/form-data">
                    <div class="p-3 p-lg-5 border">

                        <!-- Ürün Adı -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Product Name *</label>
                                <input type="text" name="Name" class="form-control" placeholder="Enter product name">
                            </div>
                        </div>

                        <!-- Açıklama -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Description *</label>
                                <textarea name="Description" cols="30" rows="4" class="form-control"
                                          placeholder="Enter product description"></textarea>
                            </div>
                        </div>

                        <!-- Fiyat & Stok -->
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="text-black">Price *</label>
                                <input type="number" name="Price" step="0.01" class="form-control" placeholder="0.00">
                            </div>

                            <div class="col-md-6">
                                <label class="text-black">Stock *</label>
                                <input type="number" name="Stock" class="form-control" placeholder="0">
                            </div>
                        </div>

                        <!-- Kategori -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Category *</label>
                                <select name="Category" class="form-control">
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category">@category</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Mevcut Resim -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Current Image</label>
                                <div>
                                    <img src="~/images/cloth_1.jpg" class="img-fluid rounded" style="max-width:200px;" />
                                </div>
                            </div>
                        </div>

                        <!-- Yeni Resim -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Change Product Image</label>
                                <input type="file" class="form-control" name="ImageFile">
                            </div>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="form-group row mt-4">
                            <div class="col-md-12">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">
                                    Update Product
                                </button>
                            </div>
                        </div>

                    </div>
                </form>

            </div>

            <!-- Sağda Önizleme -->
            <div class="col-md-5 ml-auto">
                <img src="~/images/cloth_1.jpg" alt="Preview" class="img-fluid rounded">
            </div>

        </div>

    </div>
</div>
