@model Shoppers.Data.Entities.UserEntity

@{
    ViewData["Title"] = "Approve User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Approve Seller Request</h1>

<div class="row">
    <div class="col-lg-6">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">User Information</h6>
            </div>

            <div class="card-body">
                <p class="mb-4">
                    Are you sure you want to promote this user to <strong>Seller</strong>?
                    <br />
                    The user will be able to add and manage their own products.
                </p>

                <div class="border rounded p-3 mb-4 bg-light">
                    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Current Role:</strong> @Model.Role?.Name</p>
                </div>

                <form asp-action="ApproveConfirmed" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <button type="submit" class="btn btn-success btn-block mb-2">
                        <i class="fas fa-check mr-1"></i> Approve as Seller
                    </button>

                    <a asp-action="List" class="btn btn-secondary btn-block">
                        <i class="fas fa-arrow-left mr-1"></i> Back to User List
                    </a>
                </form>

            </div>
        </div>

    </div>
</div>