@model App.Models.DTO.UserDto
@{
    ViewData["Title"] = "My Profile";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">My Profile</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <h2 class="h3 mb-3 text-black">Profile Details</h2>

                <div class="p-4 border rounded">
                    <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Role:</strong> @Model.Role</p>
                    <p><strong>Registered:</strong> @Model.CreatedAt.ToShortDateString()</p>

                    <a asp-action="Edit" class="btn btn-primary mt-3">Edit Profile</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="border p-4 rounded shadow-sm">
                    <h3 class="h5 text-black mb-4">Account Menu</h3>
                    <ul class="list-unstyled">
                        <li class="mb-3"><a asp-action="Details" class="text-black">Profile Details</a></li>
                        <li class="mb-3"><a asp-action="Edit" class="text-black">Edit Profile</a></li>
                        <li class="mb-3"><a asp-action="MyOrders" class="text-black">My Orders</a></li>
                        <li class="mb-3"><a asp-action="MyProducts" class="text-black">My Products</a></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>