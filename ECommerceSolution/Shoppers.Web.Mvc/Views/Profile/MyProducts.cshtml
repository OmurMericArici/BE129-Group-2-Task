@model List<App.Models.DTO.ProductDto>

@{
    ViewData["Title"] = "My Products";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">My Products</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Products You Added</h2>
            </div>
        </div>

        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                        <div class="block-4 text-center border">
                            <figure class="block-4-image">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">
                                    @if (item.ImageUrls != null && item.ImageUrls.Any())
                                    {
                                        <img src="@item.ImageUrls.First()" alt="@item.Name" class="img-fluid" style="height:250px; object-fit:cover;">
                                    }
                                    else
                                    {
                                        <img src="~/images/cloth_1.jpg" alt="No Image" class="img-fluid">
                                    }
                                </a>
                            </figure>
                            <div class="block-4-text p-4">
                                <h3 class="text-primary">@item.Name</h3>
                                <p class="mb-1">Stock: @item.StockAmount</p>
                                <p class="text-primary font-weight-bold">@item.Price.ToString("C")</p>

                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                <a asp-controller="Product" asp-action="Comment" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Comments</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-12 text-center">
                    <p>You haven't added any products yet.</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add New Product</a>
                </div>
            }
        </div>
    </div>
</div>