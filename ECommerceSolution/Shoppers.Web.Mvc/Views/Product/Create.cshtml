@{
    ViewData["Title"] = "Add Product";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Add Product</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Add New Product</h2>
            </div>

            <div class="col-md-7">

                <form method="post" enctype="multipart/form-data">
                    <div class="p-3 p-lg-5 border">

                        <!-- Ürün Adı -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Product Name *</label>
                                <input type="text" name="Name" class="form-control" placeholder="Product name">
                            </div>
                        </div>

                        <!-- Açıklama -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Description *</label>
                                <textarea name="Description" cols="30" rows="4" class="form-control" placeholder="Write product description..."></textarea>
                            </div>
                        </div>

                        <!-- Fiyat -->
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label class="text-black">Price *</label>
                                <input type="number" name="Price" class="form-control" placeholder="0.00" step="0.01">
                            </div>

                            <!-- Stok -->
                            <div class="col-md-6">
                                <label class="text-black">Stock *</label>
                                <input type="number" name="Stock" class="form-control" placeholder="Stock amount">
                            </div>
                        </div>

                        <!-- Kategori -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Category *</label>
                                <select name="Category" class="form-control">
                                    <option value="">Select...</option>
                                    <option>Men</option>
                                    <option>Women</option>
                                    <option>Children</option>
                                    <option>Shoes</option>
                                    <option>Accessories</option>
                                </select>
                            </div>
                        </div>

                        <!-- Resim -->
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="text-black">Product Image *</label>
                                <input type="file" name="ImageFile" class="form-control">
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="form-group row mt-4">
                            <div class="col-md-12">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">
                                    Add Product
                                </button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

            <!-- Sağda küçük resim -->
            <div class="col-md-5 ml-auto">
                <img src="~/images/cloth_3.jpg" alt="Preview" class="img-fluid rounded">
            </div>

        </div>

    </div>
</div>
