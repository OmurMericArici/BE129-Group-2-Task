@model App.Models.DTO.ProductDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">@Model.Name</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                {
                    <img src="@Model.ImageUrls.First()" alt="@Model.Name" class="img-fluid">
                }
                else
                {
                    <img src="~/images/cloth_1.jpg" alt="No Image" class="img-fluid">
                }
            </div>

            <div class="col-md-6">
                <h2 class="text-black">@Model.Name</h2>
                <p>@Model.Details</p>

                <p><strong class="text-primary h4">@Model.Price.ToString("C")</strong></p>
                <p>Stock: @Model.StockAmount</p>

                <form method="post" asp-controller="Cart" asp-action="AddProduct">
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div class="mb-5">
                        <div class="input-group mb-3" style="max-width: 120px;">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                            </div>

                            <input type="text" name="quantity" class="form-control text-center" value="1">

                            <div class="input-group-append">
                                <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                            </div>
                        </div>
                    </div>

                    <p>
                        @if (Model.StockAmount > 0)
                        {
                            <button type="submit" class="buy-now btn btn-sm btn-primary">Add To Cart</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-sm btn-secondary" disabled>Out of Stock</button>
                        }
                    </p>
                </form>

            </div>
        </div>
    </div>
</div>