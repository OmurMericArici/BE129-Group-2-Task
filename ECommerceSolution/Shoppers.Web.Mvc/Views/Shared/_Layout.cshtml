<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shoppers</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css" />
    <link rel="stylesheet" href="~/css/aos.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="site-wrap">

        <!-- Header Section -->
        <header class="site-navbar" role="banner">

            <!-- Top Bar: Search, Logo, User Icons -->
            <div class="site-navbar-top">
                <div class="container">
                    <div class="row align-items-center">

                        <!-- Search Bar -->
                        <div class="col-6 col-md-4 order-2 order-md-1">
                            <form class="site-block-top-search">
                                <span class="icon icon-search2"></span>
                                <input type="text" class="form-control border-0" placeholder="Search">
                            </form>
                        </div>

                        <!-- Brand Logo -->
                        <div class="col-12 col-md-4 order-1 order-md-2 text-center">
                            <div class="site-logo">
                                <a asp-controller="Home" asp-action="Index" class="js-logo-clone">Shoppers</a>
                            </div>
                        </div>

                        <!-- Action Icons (User, Wishlist, Cart) -->
                        <div class="col-6 col-md-4 text-right order-3">
                            <div class="site-top-icons">
                                <ul>
                                    <li><a asp-controller="Auth" asp-action="Login"><span class="icon icon-person"></span></a></li>
                                    <li><a href="#"><span class="icon icon-heart-o"></span></a></li>

                                    <li>
                                        <a asp-controller="Cart" asp-action="Edit" class="site-cart">
                                            <span class="icon icon-shopping_cart"></span>
                                            <span class="count">2</span>
                                        </a>
                                    </li>

                                    <li class="d-inline-block d-md-none ml-md-0">
                                        <a href="#" class="site-menu-toggle js-menu-toggle">
                                            <span class="icon-menu"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Main Navigation Menu -->
            <nav class="site-navigation text-right text-md-center">
                <div class="container">
                    <ul class="site-menu js-clone-nav d-none d-md-block">

                        <!-- Home Link -->
                        <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- About Us Link -->
                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "AboutUs" ? "active" : "")">
                            <a asp-controller="Home" asp-action="AboutUs">About</a>
                        </li>

                        <!-- General Shop Link (No filters) -->
                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Listing" && Context.Request.Query["category"].Count == 0 && Context.Request.Query["sort"].Count == 0 ? "active" : "")">
                            <a asp-controller="Home" asp-action="Listing">Shop</a>
                        </li>

                        <!-- Catalogue Link (Listing with 'all' category filter) -->
                        <li class="@(Context.Request.Query["category"] == "all" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Listing" asp-route-category="all">Catalogue</a>
                        </li>

                        <!-- New Arrivals Link (Listing sorted by 'newest') -->
                        <li class="@(Context.Request.Query["sort"] == "newest" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Listing" asp-route-sort="newest">New Arrivals</a>
                        </li>

                        <!-- Contact Link -->
                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>

                    </ul>
                </div>
            </nav>

        </header>

        <!-- Main Page Content Rendered Here -->
        @RenderBody()

        <!-- Footer Section -->
        <footer class="site-footer border-top">
            <div class="container">
                <div class="row">

                    <!-- Footer Navigation Links -->
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="footer-heading mb-4">Navigations</h3>
                            </div>

                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="#">Sell online</a></li>
                                    <li><a href="#">Features</a></li>
                                    <li><a href="#">Shopping cart</a></li>
                                    <li><a href="#">Store builder</a></li>
                                </ul>
                            </div>

                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="#">Mobile commerce</a></li>
                                    <li><a href="#">Dropshipping</a></li>
                                    <li><a href="#">Website development</a></li>
                                </ul>
                            </div>

                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="#">Point of sale</a></li>
                                    <li><a href="#">Hardware</a></li>
                                    <li><a href="#">Software</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Footer Promo Section -->
                    <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                        <h3 class="footer-heading mb-4">Promo</h3>

                        <a href="#" class="block-6">
                            <img src="~/images/hero_1.jpg" class="img-fluid rounded mb-4">

                            <h3 class="font-weight-light mb-0">Finding Your Perfect Shoes</h3>
                            <p>Promo from January 15 — 25, 2019</p>
                        </a>
                    </div>

                    <!-- Footer Contact Info -->
                    <div class="col-md-6 col-lg-3">
                        <div class="block-5 mb-5">
                            <h3 class="footer-heading mb-4">Contact Info</h3>

                            <ul class="list-unstyled">
                                <li class="address">203 Fake St. Mountain View, California, USA</li>
                                <li class="phone"><a href="tel://23923929210">+2 392 3929 210</a></li>
                                <li class="email">emailaddress@domain.com</li>
                            </ul>
                        </div>

                        <div class="block-7">
                            <form action="#" method="post">
                                <label class="footer-heading">Subscribe</label>

                                <div class="form-group">
                                    <input type="text" class="form-control py-4" placeholder="Email">
                                    <input type="submit" class="btn btn-sm btn-primary" value="Send">
                                </div>
                            </form>
                        </div>
                    </div>

                </div>

                <div class="row pt-5 mt-5 text-center">
                    <div class="col-md-12">
                        <p>
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script>
                            All rights reserved | Made with ❤️ by Colorlib
                        </p>
                    </div>
                </div>

            </div>
        </footer>

    </div>

    <!-- Core Scripts -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>