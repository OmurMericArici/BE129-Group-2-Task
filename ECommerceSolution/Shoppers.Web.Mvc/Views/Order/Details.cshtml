@model Shoppers.Data.Entities.OrderEntity
@{
    ViewData["Title"] = "Order Received";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="/Home/Index">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Order Received</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <span class="icon-check_circle display-3 text-success"></span>
                <h2 class="display-3 text-black">Thank you!</h2>
                <p class="lead mb-5">You order was successfully completed.</p>

                <div class="card p-4 mb-5 mx-auto" style="max-width: 600px;">
                    <h4 class="text-left">Order Summary</h4>
                    <p class="text-left"><strong>Order Code:</strong> @Model.OrderCode</p>
                    <p class="text-left"><strong>Date:</strong> @Model.CreatedAt</p>
                    <p class="text-left"><strong>Address:</strong> @Model.Address</p>
                    <hr />
                    <ul class="list-group list-group-flush text-left">
                        @foreach (var item in Model.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    @item.Product.Name
                                    <span class="badge badge-primary badge-pill">x @item.Quantity</span>
                                </div>
                                <span>@item.UnitPrice.ToString("C")</span>
                            </li>
                        }
                    </ul>
                </div>

                <p><a href="/Home/Index" class="btn btn-sm btn-primary">Back to shop</a></p>
            </div>
        </div>
    </div>
</div>