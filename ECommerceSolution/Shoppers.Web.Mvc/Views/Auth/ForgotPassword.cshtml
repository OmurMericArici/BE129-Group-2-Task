@{
    ViewData["Title"] = "Forgot Password";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Forgot Password</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row">
            <div class="col-md-6 mb-5 mb-md-0">

                <h2 class="h3 mb-3 text-black">Reset Your Password</h2>

                <div class="p-3 p-lg-5 border">

                    <div class="mb-4">
                        <p>
                            Enter your email address below and we will send you a link to reset your password.
                        </p>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label class="text-black" for="Email">Email Address</label>
                            <input type="email" class="form-control" id="Email" placeholder="you@example.com">
                        </div>
                    </div>

                    <div class="form-group row mt-4">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Send Reset Link">
                        </div>
                    </div>

                    <p class="mt-3">
                        Remember your password?
                        <a href="/Auth/Login" class="text-primary">Login Here</a>
                    </p>

                </div>
            </div>

            <div class="col-md-6">
                <img src="~/images/cloth_1.jpg" alt="Image" class="img-fluid rounded">
            </div>

        </div>

    </div>
</div>
