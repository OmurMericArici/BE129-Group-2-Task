@model Shoppers.Data.Entities.CategoryEntity

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Delete Category</h1>

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger">
                <h6 class="m-0 font-weight-bold text-white">⚠️ Warning</h6>
            </div>
            <div class="card-body">
                <p>Are you sure you want to delete the category: <strong>@Model.Name</strong>?</p>
                
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-block">Yes, Delete Category</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-block">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>