@model Shoppers.Web.Mvc.Models.ProductEditViewModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="site-section">
    <div class="container">
        <input type="hidden" asp-for="Id" />
        <h2 class="h3 mb-3 text-black">Add New Product</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="p-3 p-lg-5 border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Name" class="text-black">Product Name *</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Details" class="text-black">Description</label>
                        <textarea asp-for="Details" cols="30" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Price" class="text-black">Price *</label>
                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StockAmount" class="text-black">Stock *</label>
                        <input asp-for="StockAmount" class="form-control">
                        <span asp-validation-for="StockAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="CategoryId" class="text-black">Category *</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value="">Select Category...</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="ImageFile" class="text-black">Image</label>
                        <input asp-for="ImageFile" class="form-control">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Add Product</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}