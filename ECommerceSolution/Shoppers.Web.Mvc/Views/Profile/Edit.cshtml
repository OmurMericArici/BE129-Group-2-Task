@model Shoppers.Web.Mvc.Models.ProfileEditViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a href="/Home/Index">Home</a>
                <span class="mx-2 mb-0">/</span>
                <strong class="text-black">Edit Profile</strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <h2 class="h3 mb-3 text-black">Edit Your Information</h2>

                <form asp-action="Edit" method="post" class="p-4 border rounded">

                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                    }

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="text-black">First Name *</label>
                            <input asp-for="FirstName" class="form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="text-black">Last Name *</label>
                            <input asp-for="LastName" class="form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="Email" class="text-black">Email</label>
                            <input asp-for="Email" class="form-control" readonly>
                            <small class="text-muted">Email cannot be changed.</small>
                        </div>
                    </div>

                    <div class="form-group row mt-4">
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Save Changes</button>
                        </div>
                    </div>

                </form>
            </div>

            <div class="col-md-4">
                <div class="border p-4 rounded shadow-sm">
                    <h3 class="h5 text-black mb-4">Account Menu</h3>
                    <ul class="list-unstyled">
                        <li class="mb-3"><a asp-action="Details" class="text-black">Profile Details</a></li>
                        <li class="mb-3"><a asp-action="Edit" class="text-black">Edit Profile</a></li>
                        <li class="mb-3"><a asp-action="MyOrders" class="text-black">My Orders</a></li>
                        <li class="mb-3"><a asp-action="MyProducts" class="text-black">My Products</a></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}